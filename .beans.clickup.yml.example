# bean-me-up ClickUp configuration example
# Add this section to your .beans.yml file

extensions:
  clickup:
    # Required: ClickUp list ID (find in list URL or use ClickUp API)
    list_id: "123456789"

    # Optional: User ID to assign new tasks to
    # If not set, tasks are assigned to the API token owner
    # Set to 0 to create unassigned tasks
    # assignee: 12345

    # Optional: Map bean statuses to ClickUp status names
    # Run `beanup statuses` to see available statuses
    status_mapping:
      draft: "backlog"
      todo: "to do"
      in-progress: "in progress"
      completed: "complete"
      scrapped: "closed"

    # Optional: Map bean priorities to ClickUp priority values
    # ClickUp: 1=Urgent, 2=High, 3=Normal, 4=Low
    priority_mapping:
      critical: 1
      high: 2
      normal: 3
      low: 4
      deferred: 4

    # Optional: Map bean types to ClickUp custom task type IDs
    # Run `beanup types` to see available task types
    # Valid bean types: milestone, epic, feature, bug, task
    # type_mapping:
    #   milestone: 1003 # Milestone
    #   epic: 1002      # Epic
    #   feature: 0      # Task (default)
    #   bug: 1001       # Bug
    #   task: 0         # Task (default)

    # Optional: Map bean fields to ClickUp custom field UUIDs
    # Run `beanup fields` to see available custom fields
    # custom_fields:
    #   bean_id: "uuid-for-text-field"
    #   created_at: "uuid-for-date-field"
    #   updated_at: "uuid-for-date-field"

    # Optional: Control which beans are synced
    sync_filter:
      exclude_status:
        - scrapped
